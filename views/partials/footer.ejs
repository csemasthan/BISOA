    <% if (typeof sessionRemainingSeconds !== 'undefined' && sessionRemainingSeconds > 0) { %>
      &nbsp;&nbsp;&nbsp;&nbsp; Session ends in: <span id="session-timer">--:--</span>
    <% } %>
  </div>
</footer>

<% if (typeof sessionRemainingSeconds !== 'undefined' && sessionRemainingSeconds > 0) { %>
<script>
  let secondsLeft = <%= sessionRemainingSeconds %>;

  function updateTimerDisplay() {
    const mins = String(Math.floor(secondsLeft / 60)).padStart(2, '0');
    const secs = String(secondsLeft % 60).padStart(2, '0');
    document.getElementById('session-timer').textContent = `${mins}:${secs}`;
  }

  setInterval(() => {
    if (secondsLeft > 0) secondsLeft--;
    updateTimerDisplay();
  }, 1000);

  window.addEventListener('DOMContentLoaded', updateTimerDisplay);
</script>
<% } %>




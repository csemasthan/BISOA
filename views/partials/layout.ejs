<!-- views/partials/layout-offcanvas.ejs -->
<!DOCTYPE html><html><head>
    <meta charset="utf-8">
    <title><%= pageTitle %></title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  </head><body class="d-flex flex-column min-vh-100">
  
  <!-- top bar with off-canvas toggle -->
  <nav class="navbar navbar-light bg-light border-bottom">
    <div class="container-fluid">
      <button class="btn btn-outline-primary me-2" type="button"
              data-bs-toggle="offcanvas" data-bs-target="#sideNav">
        <i class="bi bi-list"></i>
      </button>
      <a class="navbar-brand fw-bold" href="/">MyApp</a>
      <div class="ms-auto d-flex align-items-center">
        <span class="me-3"><%= req.session.username %></span>
        <a class="btn btn-sm btn-secondary" href="/logout">Logout</a>
      </div>
    </div>
  </nav>
  
  <!-- off-canvas menu -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="sideNav">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0">
      <ul class="list-group list-group-flush">
  
        <li class="list-group-item">
          <a href="/dashboard" class="text-decoration-none">Dashboard</a>
        </li>
  
        <% if ((req.session.activities||[]).includes("MANAGE_POLLS")) { %>
        <li class="list-group-item">
          <a href="/polls" class="text-decoration-none">Polls</a>
        </li>
        <% } %>
  
        <% if (req.session.role_id === 1) { %>
        <li class="list-group-item">
          <a href="/admin" class="text-decoration-none">Admin Panel</a>
        </li>
        <% } %>
  
      </ul>
    </div>
  </div>
  
  <main class="container flex-grow-1 py-4">
    <%- body %>
  </main>
  
  <footer class="text-center py-2 small border-top mt-auto">
    &copy; <%= new Date().getFullYear() %> MyApp <span class="ms-1">Â®</span>
  </footer>
  
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body></html>
  
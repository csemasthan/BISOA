<%- include('partials/header', { pageTitle: 'Change Password', activities }) %>

<main class="container py-5 flex-grow-1">
  <h2>Change Your Password</h2>
  
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="post" action="/change-password" class="mb-3">
    <input type="password" name="newpass"  placeholder="New password"       class="form-control mb-2" required>
    <input type="password" name="confirm"  placeholder="Confirm password"   class="form-control mb-3" required>
    <button class="btn btn-primary">Save</button>
  </form>

  <a href="/logout">Log out</a>
</main>

<%- include('partials/footer') %>

  
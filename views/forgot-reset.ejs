<%- include('partials/header', { pageTitle: 'Reset Password', user: null, activities: [] }) %>

<main class="container py-5" style="max-width: 400px;">
    <!-- Flash Message for Errors or Success -->
    <% if (messages && messages.length > 0) { %>
      <% messages.forEach(msg => { %>
        <div class="alert alert-<%= msg.type %>">
          <%= msg.text %>
        </div>
      <% }) %>
    <% } %>
  <h2 class="mb-4">Set New Password</h2>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="post" action="/reset-password">
    <input type="hidden" name="email" value="<%= email %>">

    <div class="mb-3">
      <input name="password" type="password" class="form-control" placeholder="New Password" required />
    </div>

    <button class="btn btn-primary w-100">Reset Password</button>
  </form>
</main>

<%- include('partials/footer') %>

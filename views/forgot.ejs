<%- include('partials/header', { pageTitle: 'Forgot Password', user: null, activities: [] }) %>
<main class="container py-5" style="max-width: 400px;">
    <!-- Flash Message for Errors or Success -->
    <% if (messages && messages.length > 0) { %>
      <% messages.forEach(msg => { %>
        <div class="alert alert-<%= msg.type %>">
          <%= msg.text %>
        </div>
      <% }) %>
    <% } %>
  <h2 class="mb-4">Forgot Password</h2>

  <form method="post" action="/send-otp">
    <div class="mb-3">
      <input name="email" type="email" class="form-control" placeholder="Enter your email" required />
    </div>
    <button class="btn btn-primary w-100">Send OTP</button>
  </form>
</main>

<%- include('partials/footer') %>
